<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/b"
    tools:context=".SingIn_Activity"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/lodinText"
        android:layout_width="100dp"
        android:background="@drawable/textlog"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/singupText"
        android:layout_width="100dp"
        android:background="@drawable/singuptext"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="100dp"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/texterror"
        android:text="cheking your passwoed !"
        android:layout_width="200dp"
        android:textColor="#F80303"
        android:visibility="gone"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="180dp"
        android:layout_height="15dp"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_marginLeft="55dp"
        android:background="#252525"
        android:text="Username"
        android:textColor="#fff"
        android:paddingLeft="20dp"
        android:inputType="text"
        android:layout_marginTop="220dp"
        android:layout_height="60dp"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_marginLeft="55dp"
        android:inputType="number"
        android:background="#252525"
        android:text="Passworld"
        android:textColor="#fff"
        android:paddingLeft="20dp"
        android:layout_marginTop="285dp"
        android:layout_height="60dp"/>

    <EditText
        android:id="@+id/passwordconf"
        android:layout_width="match_parent"
        android:layout_marginLeft="55dp"
        android:inputType="number"
        android:background="#252525"
        android:text="Confirm Passworld"
        android:textColor="#fff"
        android:paddingLeft="20dp"
        android:layout_marginTop="349dp"
        android:layout_height="60dp"/>


    <TextView
        android:id="@+id/lodin_now_Text"
        android:layout_width="250dp"
        android:layout_marginLeft="70dp"
        android:background="@drawable/goinmain"
        android:layout_marginTop="400dp"
        android:layout_height="70dp"/>


    <Button
        android:id="@+id/goto_facebook"
        android:layout_width="match_parent"
        android:layout_marginTop="550dp"
        android:background="@drawable/button_facebook"
        android:layout_marginLeft="55dp"
        android:layout_height="70dp"/>



</RelativeLayout>