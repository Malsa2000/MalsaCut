<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b"
    tools:context=".Login_activity">

<TextView
    android:id="@+id/lodinText"
    android:layout_width="100dp"
    android:background="@drawable/textlog"
    android:layout_marginLeft="50dp"
    android:layout_marginTop="100dp"
    android:layout_height="30dp"/>

    <TextView
        android:id="@+id/singupText"
        android:layout_width="100dp"
        android:background="@drawable/singuptext"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="100dp"
        android:layout_height="30dp"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_marginLeft="55dp"
         android:background="#252525"
        android:text="Username"
        android:textColor="#fff"
        android:paddingLeft="20dp"
        android:inputType="text"
        android:layout_marginTop="250dp"
        android:layout_height="70dp"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_marginLeft="55dp"
        android:inputType="number"
        android:background="#252525"
        android:text="Passworld"
        android:textColor="#fff"
        android:paddingLeft="20dp"
        android:layout_marginTop="325dp"
        android:layout_height="70dp"/>


    <TextView
        android:id="@+id/lodin_now_Text"
        android:layout_width="250dp"
        android:layout_marginLeft="70dp"
        android:background="@drawable/goinmain"
        android:layout_marginTop="385dp"
        android:layout_height="70dp"/>


    <Button
        android:id="@+id/goto_facebook"
        android:layout_width="match_parent"
        android:layout_marginTop="550dp"
        android:background="@drawable/button_facebook"
        android:layout_marginLeft="55dp"
        android:layout_height="70dp"/>

</RelativeLayout>